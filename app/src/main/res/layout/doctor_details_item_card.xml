<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/doc_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/doctor_image" />

        <TextView
            android:id="@+id/doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/doc_image_view"
            android:text="Doctor's Name"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doc_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_name"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/doc_image_view"
            android:text="Doctor's post"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/doc_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_post"
            android:layout_alignBaseline="@+id/doc_image_view"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/doc_image_view"
            android:text="Doctor's post"
            android:textColor="#000000" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_image_view"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <Button
                android:id="@+id/book_appointment_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Available"
                android:textColor="#ffffff" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/book_btn_parent_card"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/doc_image_view"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>